        //    if (ev.target.tagName === 'LI') {
        //        ev.target.classList.toggle('done');
        //    }
        //}, false);
    </script>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#tabs").tabs();
            $("#tabs-bottom").tabs();
            $("#menu").menu();
            $("#leftmenu").menu();

            $(".resizableMainMenu").resizable({
                handles: 'e',
                minWidth: '200',
                maxWidth: '500',
                resize: function () {
                    var remainingSpace = $(this).parent().width() - $(this).outerWidth(),
                        divTwo = $(this).next(),
                        divTwoWidth = remainingSpace - (divTwo.outerWidth() - divTwo.width());
                    divTwo.width(divTwoWidth);
                }
            });

            $("*[class^='module']").click(function () {
                var moduleClass = "";
                var classes = $(this).attr("class").split(" ");
                $.each(classes, function (key, value) {
                    if (value.substring(0, 6) == "module") {
                        moduleClass = value;
                    }
                });

                if ($("*[class^='" + moduleClass + "child" + "']:eq(0)").is(":visible")) {
                    $("*[class^='" + moduleClass + "child" + "']").hide();
                } else {
                    $("*[class^='" + moduleClass + "child" + "']").show();
                }

                $(this).show();
            });

            $("input.fullPage").click(function () {
                if ($("div#fullPage").hasClass("fullPage")) {
                    $("div#fullPage").removeClass('fullPage');
                    $(this).css({ 'top': '200px' });
                    $(this).val("Full Page");
                } else {
                    $("div#fullPage").addClass('fullPage');
                    $(this).css({ 'top': '20px' });
                    $(this).val("Exit Full Page");
                }
            });

            $(document).keyup(function(e) {
                if (e.keyCode == 27) {  // escape key maps to keycode '27'
                    if ($("div#fullPage").hasClass("fullPage")) {
                        $("div#fullPage").removeClass('fullPage');
                        $("input.fullPage").css({ 'top': '200px' });
                        $("input.fullPage").val("Full Page");
                    }
                }   
            });
        });
    </script>
    <meta name="description" content="The description of my page" />
</head>
<body style="width:100%;height:100%">
